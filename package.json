{
  "name": "saas-starter-kit",
  "version": "1.5.2",
  "private": true,
  "prisma": {
    "seed": "ts-node ./prisma/seed.ts"
  },
  "scripts": {
    "release": "git checkout release && git merge origin/main && release-it && git checkout main && git merge origin/release && git push origin main",
    "dev": "next dev --port 4002",
    "build": "prisma generate && prisma db push && next build",
    "start": "next start --port 4002",
    "check-types": "tsc --pretty --noEmit",
    "check-format": "prettier --check .",
    "check-lint": "eslint -c eslint.config.cjs ./",
    "check-unused": "npx knip",
    "format": "prettier --write .",
    "test-all": "npm run check-format && npm run check-lint && npm run check-types && npm run build",
    "playwright:update": "playwright install && playwright install-deps",
    "test:e2e": "playwright test",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage --env=jsdom",
    "build-ci": "next build",
    "sync-stripe": "node --env-file .env sync-stripe.js",
    "check-locale": "node check-locale.js",
    "delete-team": "node --env-file .env delete-team.js"
  },
  "dependencies": {
    "@boxyhq/metrics": "0.2.9",
    "@boxyhq/react-ui": "3.3.45",
    "@boxyhq/saml-jackson": "1.34.3",
    "@heroicons/react": "2.2.0",
    "@next-auth/prisma-adapter": "1.0.7",
    "@prisma/client": "6.0.1",
    "@react-email/components": "0.0.31",
    "@react-email/render": "1.0.3",
    "@retracedhq/logs-viewer": "2.8.0",
    "@retracedhq/retraced": "0.7.18",
    "@sentry/nextjs": "8.45.0",
    "@tailwindcss/typography": "0.5.15",
    "bcryptjs": "2.4.3",
    "classnames": "2.5.1",
    "cookies-next": "5.0.2",
    "currency-symbol-map": "5.1.0",
    "formik": "2.4.6",
    "i18next": "24.1.0",
    "micromatch": "4.0.8",
    "mixpanel-browser": "2.56.0",
    "next": "15.1.0",
    "next-auth": "4.24.11",
    "next-i18next": "15.4.0",
    "nodemailer": "6.9.16",
    "react": "18.3.1",
    "react-daisyui": "5.0.5",
    "react-dom": "18.3.1",
    "react-email": "3.0.4",
    "react-google-recaptcha": "3.1.0",
    "react-hot-toast": "2.4.1",
    "react-i18next": "15.2.0",
    "sharp": "0.33.5",
    "slack-notify": "2.0.7",
    "stripe": "17.4.0",
    "svix": "1.44.0",
    "swr": "2.2.5",
    "yup": "1.5.0",
    "zod": "3.24.1"
  },
  "devDependencies": {
    "@faker-js/faker": "9.3.0",
    "@playwright/test": "1.49.1",
    "@testing-library/jest-dom": "6.6.3",
    "@types/bcryptjs": "2.4.6",
    "@types/jest": "29.5.14",
    "@types/micromatch": "4.0.9",
    "@types/mixpanel-browser": "2.50.2",
    "@types/node": "22.10.2",
    "@types/nodemailer": "6.4.17",
    "@types/react": "18.3.13",
    "@typescript-eslint/eslint-plugin": "8.18.0",
    "@typescript-eslint/parser": "8.18.0",
    "autoprefixer": "10.4.20",
    "daisyui": "4.12.22",
    "eslint": "9.17.0",
    "eslint-config-next": "15.1.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-i18next": "6.1.1",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "postcss": "8.4.49",
    "prettier": "3.4.2",
    "prettier-plugin-tailwindcss": "0.6.9",
    "prisma": "6.0.1",
    "release-it": "17.10.0",
    "tailwindcss": "3.4.16",
    "ts-node": "10.9.2",
    "typescript": "5.7.2"
  },
  "overrides": {
    "typeorm": {
      "mssql": ">=11.0.0"
    }
  }
}
